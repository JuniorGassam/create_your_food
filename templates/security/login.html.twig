{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <!-- Container principal -->
    <div class="min-h-screen flex items-center justify-center bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 animate-gradient-x px-4">

        <!-- Formulaire -->
        <div class="max-w-md w-full bg-white rounded-3xl shadow-2xl p-10 space-y-6 transform transition duration-500 hover:scale-105">

            <!-- Titre -->
            <div class="text-center">
                <h1 class="text-4xl font-extrabold text-gray-900 tracking-tight">Bienvenue</h1>
                <p class="mt-2 text-gray-500">Connectez-vous pour continuer</p>
            </div>

            <!-- Message d'erreur -->
            {% if error %}
                <div class="flex items-center gap-2 p-4 mb-4 text-sm text-red-700 bg-red-100 rounded-lg" role="alert">
                    <svg class="w-5 h-5 flex-shrink-0 text-red-700" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M18 10A8 8 0 1110 2a8 8 0 018 8zm-8-4a1 1 0 00-1 1v3a1 1 0 102 0V7a1 1 0 00-1-1zm0 8a1.5 1.5 0 100-3 1.5 1.5 0 000 3z" clip-rule="evenodd"/>
                    </svg>
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <!-- Formulaire de connexion -->
            <form method="post" action="{{ path('app_login') }}" class="space-y-5">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <!-- Email / Nom d'utilisateur -->
                <div class="relative">
                    <label for="username" class="block text-sm font-medium text-gray-700 mb-1">Email ou Nom d'utilisateur</label>
                    <input type="text"
                           value="{{ last_username }}"
                           name="_username"
                           id="username"
                           placeholder="Votre email"
                           class="peer block w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-200"
                           required autofocus autocomplete="email">
                </div>

                <!-- Mot de passe -->
                <div class="relative">
                    <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Mot de passe</label>
                    <input type="password"
                           name="_password"
                           id="password"
                           placeholder="Votre mot de passe"
                           class="peer block w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-200"
                           required autocomplete="current-password">
                </div>

                <!-- Bouton -->
                <button type="submit" class="w-full py-3 bg-indigo-600 hover:bg-indigo-700 text-white font-semibold rounded-xl shadow-lg focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-300 transform hover:scale-105">
                    Connexion
                </button>

                <!-- Lien secondaire -->
                <p class="text-center text-sm text-gray-500 mt-2">
                    Pas encore de compte ?
                    <a href="#" class="text-indigo-600 hover:text-indigo-700 font-medium transition duration-200">Inscrivez-vous</a>
                </p>
            </form>
        </div>
    </div>

    <!-- Animations CSS -->
    <style>
        /* Dégradé animé pour le background */
        @keyframes gradient-x {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }
        .animate-gradient-x {
            background-size: 200% 200%;
            animation: gradient-x 10s ease infinite;
        }
    </style>
{% endblock %}
