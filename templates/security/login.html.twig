{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

    <style>

        /* --- PAGE BACKGROUND --- */
        .login-page {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #eef2f3, #dfe9f3);
            padding: 20px;
            font-family: 'Inter', sans-serif;
        }

        /* --- CARD --- */
        .login-card {
            background: #ffffff;
            padding: 40px 35px;
            border-radius: 18px;
            width: 100%;
            max-width: 420px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08);
            animation: fadeIn 0.4s ease;
        }

        /* Smooth fade-in animation */
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* --- TITLES --- */
        .login-title {
            font-size: 2rem;
            font-weight: 700;
            text-align: center;
            margin-bottom: 5px;
        }

        .login-subtitle {
            text-align: center;
            color: #666;
            margin-bottom: 25px;
            font-size: 0.95rem;
        }

        /* --- INPUTS --- */
        .input-group {
            display: flex;
            flex-direction: column;
            margin-bottom: 20px;
        }

        .input-group label {
            font-weight: 600;
            margin-bottom: 8px;
            color: #333;
        }

        .input-group input {
            padding: 12px 14px;
            border-radius: 10px;
            border: 1px solid #ccc;
            transition: 0.2s;
            font-size: 1rem;
        }

        .input-group input:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 4px rgba(13, 110, 253, 0.15);
            outline: none;
        }

        /* --- PRIMARY BUTTON --- */
        .btn-primary-modern {
            width: 100%;
            padding: 14px;
            background: #0d6efd;
            color: white;
            border-radius: 12px;
            border: none;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: 0.2s;
            margin-top: 5px;
        }

        .btn-primary-modern:hover {
            background: #0b5ed7;
        }

        /* --- ERROR MESSAGE --- */
        .alert-error {
            background: #ffe5e5;
            padding: 12px;
            border-radius: 10px;
            color: #b60000;
            margin-bottom: 20px;
            text-align: center;
            font-weight: 600;
        }

        /* --- SEPARATOR --- */
        .separator {
            text-align: center;
            position: relative;
            margin: 25px 0;
        }

        .separator::before,
        .separator::after {
            content: "";
            height: 1px;
            width: 40%;
            background: #ddd;
            position: absolute;
            top: 50%;
        }

        .separator::before { left: 0; }
        .separator::after { right: 0; }

        .separator span {
            font-size: 0.85rem;
            color: #666;
            padding: 0 10px;
            background: white;
        }

        /* --- GOOGLE BUTTON --- */
        .btn-google {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 12px;
            border-radius: 12px;
            border: 1px solid #dd4b39;
            color: #dd4b39;
            font-weight: 600;
            text-decoration: none;
            transition: 0.2s;
            gap: 8px;
        }

        .btn-google:hover {
            background: #dd4b39;
            color: white;
        }

    </style>

    <div class="login-page">

        <div class="login-card">

            <h2 class="login-title">Connexion</h2>
            <p class="login-subtitle">Accédez à votre espace personnel</p>

            {% if error %}
                <div class="alert-error">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <form method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="input-group">
                    <label for="inputEmail">Email</label>
                    <input type="email" id="inputEmail" name="email" value="{{ last_username }}" required>
                </div>

                <div class="input-group">
                    <label for="inputPassword">Mot de passe</label>
                    <input type="password" id="inputPassword" name="password" required>
                </div>

                <button class="btn-primary-modern" type="submit">
                    Se connecter
                </button>
            </form>

            <div class="separator">
                <span>OU</span>
            </div>

            <a href="{{ path('connect_google_start') }}" class="btn-google">
                <i class="fab fa-google"></i> Se connecter avec Google
            </a>

        </div>

    </div>

{% endblock %}
