{% extends 'base.html.twig' %}

{% block title %}Authentification | JuniorJudin{% endblock %}

{% block body %}

    <style>
        /* --- DYNAMICS & TRANSITIONS --- */
        :root {
            --primary: #4f46e5;
            --primary-hover: #4338ca;
            --google: #dd4b39;
            --glass: rgba(255, 255, 255, 0.95);
        }

        .login-page {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: radial-gradient(circle at top left, #4f46e5, #7c3aed);
            padding: 20px;
            font-family: 'Inter', sans-serif;
        }

        .login-card {
            background: var(--glass);
            backdrop-filter: blur(10px);
            padding: 45px 35px;
            border-radius: 2rem;
            width: 100%;
            max-width: 440px;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
            animation: slideUp 0.5s ease-out;
        }

        @keyframes slideUp {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* --- TITLES --- */
        .login-title {
            font-size: 2.2rem;
            font-weight: 900;
            text-align: center;
            color: #1e293b;
            letter-spacing: -1px;
            margin-bottom: 8px;
        }

        .login-subtitle {
            text-align: center;
            color: #64748b;
            margin-bottom: 30px;
            font-size: 0.95rem;
            font-weight: 500;
        }

        /* --- INPUTS --- */
        .input-group {
            display: flex;
            flex-direction: column;
            margin-bottom: 20px;
        }

        .input-group label {
            font-size: 0.75rem;
            font-weight: 800;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 8px;
            color: #64748b;
        }

        .input-group input {
            padding: 14px 16px;
            border-radius: 14px;
            border: 2px solid #f1f5f9;
            background: #f8fafc;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            font-size: 1rem;
            color: #1e293b;
        }

        .input-group input:focus {
            border-color: var(--primary);
            background: #fff;
            box-shadow: 0 0 0 4px rgba(79, 70, 229, 0.1);
            outline: none;
        }

        /* --- BUTTONS --- */
        .btn-primary-modern {
            width: 100%;
            padding: 16px;
            background: var(--primary);
            color: white;
            border-radius: 14px;
            border: none;
            font-size: 1rem;
            font-weight: 700;
            cursor: pointer;
            transition: 0.3s;
            box-shadow: 0 10px 15px -3px rgba(79, 70, 229, 0.3);
        }

        .btn-primary-modern:hover {
            background: var(--primary-hover);
            transform: translateY(-2px);
            box-shadow: 0 15px 20px -5px rgba(79, 70, 229, 0.4);
        }

        .btn-primary-modern:active { transform: translateY(0); }

        .btn-google {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 14px;
            border-radius: 14px;
            border: 2px solid #f1f5f9;
            background: white;
            color: #1e293b;
            font-weight: 700;
            text-decoration: none;
            transition: 0.3s;
            gap: 12px;
        }

        .btn-google:hover {
            background: #f8fafc;
            border-color: #e2e8f0;
            transform: translateY(-1px);
        }

        .btn-google img { width: 20px; }

        /* --- UI ELEMENTS --- */
        .separator {
            display: flex;
            align-items: center;
            margin: 25px 0;
            color: #94a3b8;
            font-size: 0.75rem;
            font-weight: 700;
        }

        .separator::before, .separator::after {
            content: "";
            flex: 1;
            height: 1px;
            background: #e2e8f0;
        }

        .separator span { padding: 0 15px; }

        .alert-error {
            background: #fff1f2;
            padding: 14px;
            border-radius: 12px;
            color: #e11d48;
            margin-bottom: 25px;
            font-size: 0.9rem;
            border: 1px solid #fecdd3;
            font-weight: 600;
        }

        .toggle-link {
            text-align: center;
            margin-top: 25px;
            font-size: 0.9rem;
            color: #64748b;
        }

        .toggle-link a {
            color: var(--primary);
            font-weight: 800;
            text-decoration: none;
            cursor: pointer;
        }

        .hidden { display: none; }
    </style>

    <div class="login-page">

        <div class="login-card">

            <div id="login-section">
                <h2 class="login-title">Bon retour !</h2>
                <p class="login-subtitle">Connectez-vous à JuniorJudin'Board</p>

                {% if error %}
                    <div class="alert-error">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <form method="post" action="{{ path('app_login') }}">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="input-group">
                        <label for="inputEmail">Email professionnel</label>
                        <input type="email" id="inputEmail" name="email" value="{{ last_username }}" placeholder="nom@exemple.com" required autofocus>
                    </div>

                    <div class="input-group">
                        <label for="inputPassword">Mot de passe</label>
                        <input type="password" id="inputPassword" name="password" placeholder="••••••••" required>
                    </div>

                    <button class="btn-primary-modern" type="submit">
                        Se connecter
                    </button>
                </form>

                <div class="toggle-link">
                    Pas encore de compte ? <a onclick="toggleAuth()">Créez-en un</a>
                </div>
            </div>

            <div id="register-section" class="hidden">
                <h2 class="login-title">Bienvenue !</h2>
                <p class="login-subtitle">Rejoignez notre communauté d'experts</p>

                <form method="post" action="{{ path('app_register') }}">
                    <div class="input-group">
                        <label>Email</label>
                        <input type="email" name="email" placeholder="votre@email.com" required>
                    </div>

                    <div class="input-group">
                        <label>Mot de passe</label>
                        <input type="password" name="password" placeholder="Minimum 8 caractères" required>
                    </div>

                    <button class="btn-primary-modern" type="submit" style="background: #059669;">
                        Créer mon compte
                    </button>
                </form>

                <div class="toggle-link">
                    Déjà membre ? <a onclick="toggleAuth()">Connectez-vous</a>
                </div>
            </div>

            <div class="separator">
                <span>OU</span>
            </div>

            <a href="{{ path('connect_google_start') }}" class="btn-google">
                <img src="https://www.gstatic.com/images/branding/product/1x/gsa_512dp.png" alt="Google">
                Continuer avec Google
            </a>

        </div>

    </div>

    <script>
        function toggleAuth() {
            const login = document.getElementById('login-section');
            const register = document.getElementById('register-section');

            login.classList.toggle('hidden');
            register.classList.toggle('hidden');
        }
    </script>

{% endblock %}