

{% extends 'base.html.twig' %}

{% block title %}{{ meal.strMeal }} | Recette{% endblock %}

{% block body %}
    <a href="{{ path('foods_list') }}" class="inline-flex items-center text-sm font-bold text-slate-500 hover:text-indigo-600 transition mb-8 group">
        <svg class="w-5 h-5 mr-2 transform group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path></svg>
        Retour aux recettes
    </a>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">

        <div class="space-y-8">
            <div class="relative group overflow-hidden rounded-[2.5rem] shadow-2xl">
                <img src="{{ meal.strMealThumb }}" alt="{{ meal.strMeal }}" class="w-full object-cover transition-transform duration-700 group-hover:scale-105">
                <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"></div>
                <div class="absolute bottom-6 left-6">
                    <span class="px-4 py-2 bg-white/20 backdrop-blur-md rounded-full text-white text-xs font-bold uppercase tracking-widest border border-white/30">
                        {{ meal.strArea }}
                    </span>
                </div>
            </div>

            <div class="bg-white dark:bg-slate-900 rounded-[2rem] p-8 border border-slate-100 dark:border-slate-800 shadow-sm">
                <h2 class="text-xl font-black mb-6 flex items-center gap-3">
                    <span class="p-2 bg-orange-100 dark:bg-orange-900/30 rounded-lg text-lg">ü•ï</span>
                    Ingr√©dients
                </h2>
                <ul class="space-y-4">
                    {% for item in ingredients %}
                        <li class="flex justify-between items-center pb-3 border-b border-slate-50 dark:border-slate-800 last:border-0">
                            <span class="text-slate-600 dark:text-slate-400 font-medium">{{ item.name }}</span>
                            <span class="px-3 py-1 bg-slate-100 dark:bg-slate-800 rounded-lg text-xs font-bold text-indigo-600 dark:text-indigo-400">
                                {{ item.measure }}
                            </span>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>

        <div class="lg:col-span-2 space-y-8">
            <div class="bg-white dark:bg-slate-900 rounded-[2rem] p-8 md:p-12 border border-slate-100 dark:border-slate-800 shadow-sm">
                <div class="mb-8">
                    <span class="text-indigo-600 font-bold tracking-widest text-xs uppercase">{{ meal.strCategory }}</span>
                    <h1 class="text-4xl md:text-5xl font-black text-slate-900 dark:text-white mt-2">{{ meal.strMeal }}</h1>
                </div>

                <h2 class="text-xl font-black mb-6 flex items-center gap-3">
                    <span class="p-2 bg-indigo-100 dark:bg-indigo-900/30 rounded-lg text-lg">üìù</span>
                    Instructions
                </h2>

                <div class="prose dark:prose-invert max-w-none text-slate-600 dark:text-slate-300 leading-relaxed space-y-6">
                    {{ meal.strInstructions|nl2br }}
                </div>
                <br><br>

                <a href="{{ path('recipe_nutrition', {id: meal.idMeal}) }}" class="flex items-center justify-center gap-3 px-6 py-4 bg-emerald-600 hover:bg-emerald-700 text-white rounded-2xl font-bold transition-all shadow-lg shadow-emerald-600/20">
                    <span>üìä</span> Voir l'Analyse & Assistant IA
                </a>

                {% if meal.strYoutube %}
                    <div class="mt-12 pt-12 border-t border-slate-100 dark:border-slate-800">
                        <h2 class="text-xl font-black mb-6 flex items-center gap-3">
                            <span class="p-2 bg-red-100 dark:bg-red-900/30 rounded-lg text-lg">üé¨</span>
                            Tutoriel Vid√©o
                        </h2>
                        <div class="aspect-video rounded-3xl overflow-hidden shadow-2xl">
                            {% set videoId = meal.strYoutube|split('v=')|last %}
                            <iframe class="w-full h-full" src="https://www.youtube.com/embed/{{ videoId }}" frameborder="0" allowfullscreen></iframe>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}