{% extends 'base.html.twig' %}

{% block title %}Explorez Votre Nourriture | Create Your Food{% endblock %}

{% block body %}
    <header class="text-center mb-16 space-y-4">
        <h1 class="text-4xl md:text-6xl font-black tracking-tight text-slate-900 dark:text-white">
            Explorez <span class="text-transparent bg-clip-text bg-gradient-to-r from-indigo-600 to-violet-500">Votre Nourriture</span>
        </h1>
        <p class="text-slate-500 dark:text-slate-400 text-lg md:text-xl max-w-2xl mx-auto font-medium">
            D√©couvrez des recettes du monde entier et analysez vos produits du quotidien.
        </p>
    </header>

    <div class="max-w-2xl mx-auto mb-20">
        <form action="{{ path('foods_list') }}" method="GET" class="relative group">
            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                <svg class="w-5 h-5 text-slate-400 group-focus-within:text-indigo-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
            </div>
            <input
                    type="search"
                    name="search"
                    placeholder="Rechercher une recette (pizza, poulet...)"
                    value="{{ currentSearch is defined and currentSearch != 'chicken' ? currentSearch : '' }}"
                    class="block w-full pl-12 pr-32 py-4 bg-white dark:bg-slate-900 border border-slate-200 dark:border-slate-800 rounded-2xl shadow-xl focus:ring-4 focus:ring-indigo-500/10 focus:border-indigo-500 transition-all outline-none dark:text-white"
            >
            <button type="submit" class="absolute right-2 top-2 bottom-2 px-6 bg-indigo-600 hover:bg-indigo-700 text-white rounded-xl font-bold text-sm transition-all transform active:scale-95 shadow-lg shadow-indigo-600/20">
                Rechercher
            </button>
        </form>
    </div>

    <section class="mb-24">
        <div class="flex items-center gap-4 mb-10">
            <div class="p-3 bg-indigo-100 dark:bg-indigo-900/30 rounded-2xl text-2xl">üçΩÔ∏è</div>
            <div>
                <h2 class="text-2xl font-bold dark:text-white">Recettes sugg√©r√©es</h2>
                <p class="text-slate-500 text-sm">Inspirations culinaires de TheMealDB</p>
            </div>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
            {% for meal in meals %}
                <article class="group bg-white dark:bg-slate-900 rounded-3xl overflow-hidden shadow-sm hover:shadow-2xl transition-all duration-500 border border-slate-100 dark:border-slate-800 flex flex-col">
                    <div class="relative overflow-hidden aspect-square">
                        <img src="{{ meal.strMealThumb }}" alt="{{ meal.strMeal }}" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110">
                        <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                        <span class="absolute top-4 left-4 px-3 py-1 bg-white/90 backdrop-blur-md rounded-full text-xs font-bold text-slate-800 shadow-sm">
                            {{ meal.strArea }}
                        </span>
                    </div>

                    <div class="p-6 flex flex-col flex-grow">
                        <span class="text-indigo-500 text-xs font-bold uppercase tracking-widest mb-2">{{ meal.strCategory }}</span>
                        <h3 class="text-xl font-bold text-slate-800 dark:text-white mb-6 line-clamp-2 leading-tight">{{ meal.strMeal }}</h3>

                        <div class="mt-auto">
                            <a href="{{ meal.strSource ?: '#' }}" target="_blank" class="flex items-center justify-center w-full py-3 bg-slate-50 dark:bg-slate-800 group-hover:bg-indigo-600 text-slate-700 dark:text-slate-300 group-hover:text-white rounded-xl font-bold text-sm transition-all duration-300">
                                Voir la recette
                                <svg class="ml-2 w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg>
                            </a>
                        </div>
                    </div>
                </article>
            {% else %}
                <div class="col-span-full py-20 text-center bg-slate-100 dark:bg-slate-900 rounded-3xl border-2 border-dashed border-slate-200 dark:border-slate-800">
                    <p class="text-slate-500 font-medium">Aucun repas trouv√© pour cette recherche.</p>
                </div>
            {% endfor %}
        </div>
    </section>

    <section>
        <div class="flex items-center gap-4 mb-10">
            <div class="p-3 bg-emerald-100 dark:bg-emerald-900/30 rounded-2xl text-2xl">ü•ó</div>
            <div>
                <h2 class="text-2xl font-bold dark:text-white">Analyse nutritionnelle</h2>
                <p class="text-slate-500 text-sm">Donn√©es extraites d'OpenFoodFacts</p>
            </div>
        </div>

        {% if food.status == 1 and food.product %}
            <div class="bg-white dark:bg-slate-900 rounded-[2rem] p-8 md:p-12 shadow-2xl border border-slate-100 dark:border-slate-800 flex flex-col md:flex-row gap-12 items-center md:items-start">

                <div class="relative shrink-0">
                    <div class="w-48 h-48 rounded-3xl overflow-hidden shadow-2xl border-4 border-slate-50 dark:border-slate-800">
                        <img src="{{ food.product.image_front_small_url }}" alt="{{ food.product.product_name }}" class="w-full h-full object-cover">
                    </div>
                    {% if food.product.nutriscore_grade %}
                        <div class="absolute -bottom-4 -right-4 shadow-xl">
                            <img src="https://static.openfoodfacts.org/images/attributes/nutriscore-{{ food.product.nutriscore_grade }}.svg" class="h-16 w-auto rounded-lg">
                        </div>
                    {% endif %}
                </div>

                <div class="flex-grow space-y-6 text-center md:text-left">
                    <div class="space-y-2">
                        <h3 class="text-3xl font-black text-slate-900 dark:text-white">{{ food.product.product_name }}</h3>
                        <p class="text-slate-400 font-mono text-xs tracking-widest">EAN: {{ food.code }}</p>
                    </div>

                    <div class="flex flex-wrap justify-center md:justify-start gap-3">
                        <span class="px-4 py-1.5 bg-indigo-50 dark:bg-indigo-900/30 text-indigo-600 dark:text-indigo-400 rounded-full text-xs font-bold ring-1 ring-indigo-200 dark:ring-indigo-800">
                            {{ food.product.brands|split(',')|first }}
                        </span>
                        <span class="px-4 py-1.5 bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-400 rounded-full text-xs font-bold">
                            {{ food.product.categories|split(',')|first }}
                        </span>
                    </div>

                    {% if food.product.ingredients_text %}
                        <div class="bg-slate-50 dark:bg-slate-800/50 p-6 rounded-2xl">
                            <h4 class="text-xs font-bold uppercase text-slate-400 mb-2 tracking-widest italic text-center md:text-left">Composition</h4>
                            <p class="text-slate-600 dark:text-slate-300 text-sm leading-relaxed italic">
                                "{{ food.product.ingredients_text|slice(0, 200) }}..."
                            </p>
                        </div>
                    {% endif %}

                    <a href="https://fr.openfoodfacts.org/produit/{{ food.code }}" target="_blank" class="inline-flex items-center text-sm font-bold text-indigo-600 hover:text-indigo-700 dark:text-indigo-400 dark:hover:text-indigo-300 transition-colors">
                        Consulter la fiche nutritionnelle compl√®te
                        <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path></svg>
                    </a>
                </div>
            </div>
        {% else %}
            <div class="p-8 bg-rose-50 dark:bg-rose-900/10 border border-rose-100 dark:border-rose-900/30 rounded-3xl text-center">
                <p class="text-rose-600 dark:text-rose-400 font-medium">Produit introuvable ou code barre invalide.</p>
            </div>
        {% endif %}
    </section>
{% endblock %}

{% block stylesheets %}
    {# On supprime le bloc <style> interne car Tailwind fait tout le travail d√©sormais #}
{% endblock %}